                    <label class="radio">
                        <input name="pizzasize3" type="radio" size="small" value="$12.99" />
                        <span>Small</span>
                    </label>
                </div>
                <div class="col size s12">
                    <label>
                        <input name="pizzasize3" type="radio" value="$20.55" />
                        <span>Meduim</span>
                    </label>
                </div>
                <div class="col size s12">
                    <label>
                        <input name="pizzasize3" type="radio" value="$26.78" />
                        <span>Large</span>
                    </label>
                </div>
            </div>
            <div class="col product-cart xl12 ">
                <div class="col s6 "><span class="money" id="money3">$12.99</span></div>
                <div class="col product-to-cart s6 ">
                    <form id="hawai" asp-controller="Order" asp-action="AddOrder" method="POST">
                        <input type="hidden" asp-for="Name" value="Hawaiian pizza">
